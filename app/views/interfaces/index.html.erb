<%- model_class = Interface.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:url) %></th>
      <th><%= model_class.human_attribute_name(:method) %></th>
      <th><%= model_class.human_attribute_name(:params) %></th>
      <th><%= model_class.human_attribute_name(:returns) %></th>
      <th><%= model_class.human_attribute_name(:auth) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @interfaces.each do |interface| %>
      <tr>
        <td><%= link_to interface.id, interface_path(interface) %></td>
        <td><%= interface.url %></td>
        <td><%= interface.method %></td>
        <td><%= interface.params %></td>
        <td><%= interface.returns %></td>
        <td><%= interface.auth %></td>
        <td><%=l interface.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_interface_path(interface), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      interface_path(interface),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_interface_path,
            :class => 'btn btn-primary' %>
